---
import { Image } from "astro:assets";
import { ArrowDown, Github, Linkedin } from "lucide-astro";

import profileImage from "../assets/profile.jpg";
---

<div
  class="overflow-hidden snap-start snap-always relative w-full h-dvh bg-gray-950"
  id="start"
>
  <!-- Grid background -->
  <div
    class="absolute inset-0 opacity-4 bg-size-[60px_60px] bg-[linear-gradient(rgb(255_255_255)_1px,transparent_1px),linear-gradient(90deg,rgb(255_255_255)_1px,transparent_1px)] md:bg-size-[100px_100px]"
  >
  </div>

  <!-- Animated blurred bubbles -->
  <div class="absolute inset-0 overflow-hidden blur-[140px] md:blur-[250px]">
    <div
      class="absolute top-0 left-0 -translate-1/3 w-1/2 h-1/2 bg-sky-900 rounded-full animate-pulse [animation-duration:40s]"
    >
    </div>
    <div
      class="absolute top-2/7 left-2/4 w-1/3 h-1/3 bg-teal-900 rounded-full animate-bounce [animation-duration:30s]"
    >
    </div>
    <div
      class="absolute bottom-0 left-1/2 -translate-x-1/2 translate-y-2/3 w-2/3 h-2/3 bg-teal-900 rounded-full animate-pulse [animation-duration:30s]"
    >
    </div>
  </div>

  <!-- Text content -->
  <div
    class="absolute box-border inset-0 flex gap-4 md:gap-12 flex-col items-center justify-center pointer-events-none mx-12 my-22"
  >
    <div
      class="flex gap-4 md:gap-12 pointer-events-auto flex-col md:flex-row items-center md:items-start"
    >
      <Image
        src={profileImage}
        alt="Daniel's profile picture"
        class="size-48 md:size-64 rounded-full"
        widths={[192, 256, 384, 512]}
      />
      <div class="flex gap-4 md:gap-6 flex-col max-w-[500px] justify-center">
        <h1
          class="bg-linear-to-r from-sky-400 to-teal-500 bg-clip-text text-transparent font-extrabold text-center text-3xl md:text-left md:text-5xl"
        >
          Hi, I'm Daniel!
        </h1>
        <p
          class="text-[clamp(1rem,2.5vw,1.25rem)] text-xl leading-6 md:leading-8 tracking-wide text-white/60 text-center md:text-left"
        >
          A Full Stack Developer and Software Architect mastering the entire
          digital lifecycle. Defined by an instinctive eye for design and a
          passion for emerging technologies.
        </p>
      </div>
    </div>

    <!-- Social Links -->
    <div class="flex gap-4 mt-2 pointer-events-auto">
      <a
        href="https://github.com/danieldaeschle"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-400 hover:opacity-80 transition-opacity"
      >
        <Github class="w-6 h-6" />
      </a>
      <a
        href="https://www.linkedin.com/in/daniel-d%C3%A4schle-772021160/"
        target="_blank"
        rel="noopener noreferrer"
        class="text-gray-400 hover:opacity-80 transition-opacity"
      >
        <Linkedin class="w-6 h-6" />
      </a>
    </div>
  </div>

  <!-- Bouncing arrow -->
  <div class="absolute bottom-8 left-1/2 -translate-x-1/2 animate-bounce">
    <ArrowDown class="w-8 h-8 text-white opacity-70" />
  </div>
</div>
